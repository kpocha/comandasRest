            <div class="panel panel-dark">
                <div class="panel-heading">Detalle Comidas<span style="margin-left:100px;"> Fecha de creacion : @Model.fecha</span></div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tr><th>Nombre</th><th>Cantidad</th><th>Precio</th></tr>
                        @foreach (var comida in Model.detalleComanda)
                        {
                            <tr>
                                <td>@comida.nombreComida</td>
                                <td>@comida.cantidad</td>
                                <td>$ @comida.precio</td>
                            </tr>
                        }
                        <tr style="border-top:2px solid black;"><td></td><td>Total</td><td>$ @Model.precioTotal</td></tr>
                    </table>
                    

