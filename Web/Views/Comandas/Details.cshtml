<div class="containe">
    <div class="row">
        <div class="col-xs-12">
            <h4>Home &raquo; Comandas &raquo; Detalle</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-title-principal">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6 col-xs-6 pull-left margin">
                            <h2 id="titulo" class="pull-left ">DETALLE Comandas</h2>
                        </div>
                        <div class="col-md-6 col-xs-6 pull-right">
                            <a href="@Url.Action("Index", "Comandas")" class="btn btn-info pull-right margin" style="display:inline-block;">
                                <span class="icon icon-action-undo"></span>
                                Volver
                            </a>
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
    
